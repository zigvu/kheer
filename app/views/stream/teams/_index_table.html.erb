<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Icon path</th>
      <th width="50px"></th>
      <th width="50px"></th>
      <th width="80px"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.description %></td>
        <td><%= team.icon_path %></td>
        <td><%= link_to 'Show', [:stream, team] %></td>
        <td><%= link_to 'Edit', edit_stream_team_path(team, league_id: @league.id) %></td>
        <td><%= link_to 'Destroy', [:stream, team], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= link_to 'New Team', new_stream_team_path(league_id: @league.id), class: "button" %></td>
      <td> </td><td> </td><td> </td><td> </td><td> </td>
    </tr>
  </tbody>
</table>
