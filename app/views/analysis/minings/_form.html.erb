<%= simple_form_for([:analysis, @mining]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :mtype, label: "Mining Type" do %>
      <%= f.select :mtype, States::MiningType.class_variable_get(:@@possibleStates).map{ |t| t.to_s }, include_blank: false %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
