<%= simple_form_for([:analysis, @mining]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <% if @mining.mtype == nil %>
      <%= f.input :mtype, label: "Mining Type" do %>
        <%= f.select :mtype, States::MiningType.new(nil).getAllStates.map{ |t| t.to_s }, include_blank: false %>
      <% end %>
    <% else %>
      <div>Mining type: <%= @mining.mtype %></div><br></br>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
