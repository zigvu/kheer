<!-- BEGIN: Layout -->
<%= render :layout => 'outershell' do %>
  <div class="row">
    <div class="small-12 columns">
      <div class="filter-panel">
        <div class="filter-title clearfix">
          <div class="text left">Select ChiaVersions</div>
        </div>
        <div class="filter-content">

<!-- BEGIN: Content -->
<%= form_tag wizard_path, :method => :put do %>
  <table>
    <thead>
      <tr><th colspan="4">For localization</th></tr>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Select</th>
      </tr>
    </thead>

    <tbody>
        <% @chia_versions.each do |chia_version| %>
          <tr>
            <td><%= chia_version.id %></td>
            <td><%= chia_version.name %></td>
            <td><%= chia_version.description %></td>
            <% isButChecked = (@chiaVersionId == chia_version.id) %>
            <td><%= radio_button_tag 'chia_version_id_loc', chia_version.id, checked = isButChecked %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
  <table>
    <thead>
      <tr><th colspan="4">For Annotation</th></tr>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Select</th>
      </tr>
    </thead>

    <tbody>
        <% @chia_versions.each do |chia_version| %>
          <tr>
            <td><%= chia_version.id %></td>
            <td><%= chia_version.name %></td>
            <td><%= chia_version.description %></td>
            <% isButChecked = (@chiaVersionId == chia_version.id) %>
            <td><%= radio_button_tag 'chia_version_id_anno', chia_version.id, checked = isButChecked %></td>
          </tr>
        <% end %>
    </tbody>
  </table>
  <%= render 'common_buttons' %>
<% end %>
<!-- END: Content -->

        </div>
      </div>
    </div>
  </div>  
<% end %>
<!-- END: Layout -->