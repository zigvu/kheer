<!-- BEGIN: Layout -->
<%= render :layout => 'analysis/mining_setup/common/outershell' do %>
  <div class="row">
    <div class="small-12 columns">
      <div class="filter-panel">
        <div class="filter-title clearfix">
          <div class="text left">Select Detectable and Zdists</div>
        </div>
        <div class="filter-content">

<!-- BEGIN: Content -->
<%= form_tag wizard_path, :method => :put do %>

  <table>
    <thead>
    <tr><th colspan="3">Detectables</th></tr>
      <tr>
        <th>Det Id</th>
        <th>Det Pretty Name</th>
        <th>Select</th>
      </tr>
    </thead>

    <tbody>
      <% @allDetectables.each do |det| %>
        <tr>
          <td><%= det.id %></td>
          <td><%= det.pretty_name %></td>
          <td>
            <% isButChecked = @detectableIds.include?(det.id) %>
            <%= check_box_tag 'detectable_ids[]', det.id, checked = isButChecked %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table>
    <thead>
    <tr><th colspan="2">Primary Zdist Threshold</th></tr>
      <tr>
        <th>Zdist</th>
        <th>Select</th>
      </tr>
    </thead>

    <tbody>
      <% @zdistThreshs.each do |zd| %>
        <tr>
          <td><%= zd %></td>
          <td>
            <% isButChecked = (@priZdist == zd) %>
            <%= radio_button_tag 'pri_zdist', zd, checked = isButChecked %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <table>
    <thead>
    <tr><th colspan="2">Secondary Zdist Threshold</th></tr>
      <tr>
        <th>Zdist</th>
        <th>Select</th>
      </tr>
    </thead>

    <tbody>
      <% @zdistThreshs.each do |zd| %>
        <tr>
          <td><%= zd %></td>
          <td>
            <% isButChecked = (@secZdist == zd) %>
            <%= radio_button_tag 'sec_zdist', zd, checked = isButChecked %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render 'analysis/mining_setup/common/common_buttons' %>
<% end %>
<!-- END: Content -->

        </div>
      </div>
    </div>
  </div>  
<% end %>
<!-- END: Layout -->